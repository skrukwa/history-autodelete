{
    "name": "History Expiry AutoDelete",
    "description": "Automatically delete Chrome history older than a set duration.",
    "icons": {
        "16": "public/icon16.png",
        "32": "public/icon32.png",
        "48": "public/icon48.png",
        "128": "public/icon128.png"
    },
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "history",
        "storage",
        "alarms"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}